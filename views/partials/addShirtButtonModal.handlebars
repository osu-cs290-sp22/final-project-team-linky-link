<button type="button" id="add-shirt-button">
    <p class="shirt-button"> 
        Add a shirt
    </p>
</button>

<div id="modal-backdrop" class="hidden"></div>
<div id="add-shirt-modal" class="hidden">
    <div class="modal-dialog">

    <div class="modal-header">
        <h3>Add a shirt</h3>
        <button type="button" class="modal-close-button">&times;</button>
    </div>

    <div class="modal-body">
        <div class="shirt-input-element">
        <label for="shirt-url-input">Shirt URL: </label>
        <textarea id="shirt-url-input"></textarea>
        </div>
        <div class="shirt-input-element">
        <label for="shirt-id-input">Shirt ID: </label>
        <textarea id="shirt-id-input"></textarea>
        </div> 
    </div>

    <div class="modal-footer">
        <button type="button" class="modal-cancel-button">Cancel</button>
        <button type="button" class="modal-accept-button">Add shirt to closet</button>
    </div>

    </div>
</div>